<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.davidcie.gyroscopebandaid.gui.StatusTab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="@string/title_original_values"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/x_axis"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/y_axis"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/z_axis"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/original_z"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/status_waiting" />

                    <TextView
                        android:id="@+id/original_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/status_waiting" />

                    <TextView
                        android:id="@+id/original_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/status_waiting" />
                </GridLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>