    <!-- Calibration -->
    <string name="calibration_title">Calibration</string>
    <string name="calibration_enabled">Using values below to offset hardware readings by a specified amount.</string>
    <string name="calibration_disabled">No constant offset applied to hardware readings.</string>
    <string name="calibration_change">Change calibration values</string>
    <string name="calibration_summary">X=$1%d Y=$2%d Z=$3%d</string><!-- TODO: change to %.2f -->
    <string name="calibration_perform">Calibrate</string>
    <string name="calibration_dialog_message">Specify values for the X, Y and Z axes manually or click <i>Calibrate</i> to estimate them automatically.</string>
    <string name="calibration_dialog_prepare">Keep your phone still, calibration will start in a few seconds.</string>
    <string name="calibration_dialog_progress">Getting stationary sensor readings…</string>
    <string name="calibration_dialog_stop">Calibration complete, suggested values have been updated.</string>

    <!-- Inversion -->
    <string name="inversion_title">Inversion</string>
    <string name="inversion_enabled">Inverting some of the axes to correct problems found in a few exotic devices.</string>
    <string name="inversion_disabled">Axes of rotation are oriented correctly by this device.</string>
    <string name="inversion_change">Select which axes to invert</string>
    <string name="inversion_summary_none">None</string>
    <string-array name="inversion_axes_entries">
        <item>X axis</item>
        <item>Y axis</item>
        <item>Z axis</item>
    </string-array>
    <string-array name="inversion_axes_values">
        <item>x</item>
        <item>y</item>
        <item>z</item>
    </string-array>

    <!-- Smoothing -->
    <string name="smoothing_title">Smoothing</string>
    <string name="smoothing_enabled">Processing consecutive readings with an algorithm to reduce jitter.</string>
    <string name="smoothing_disabled">Treating each sensor reading individually.</string>
    <string name="smoothing_algorithm">Algorithm</string>
    <string-array name="smoothing_algorithm_entries">
        <item>Median</item>
        <item>Mean (running average)</item>
        <item>Low-pass filter</item>
        <item>Additive smoothing (experimental)</item>
    </string-array>
    <string-array name="smoothing_algorithm_values">
        <item>median</item>
        <item>mean</item>
        <item>lowpass</item>
        <item>addsmooth</item>
    </string-array>
    <string name="smoothing_sample">Number of samples</string>
    <string name="smoothing_alpha">Smoothing strength</string>
    <string name="smoothing_explanation">Select the amount of smoothing to apply. Only used by more advanced filters. Suggested starting point is about half way.</string>

    <!-- Thresholding -->
    <string name="thresholding_title">Thresholding</string>
    <string name="thresholding_enabled">Interpreting smaller sensor readings as noise and outputting zero instead.</string>
    <string name="thresholding_disabled">Taking into account even smaller sensor readings.</string>
    <string name="thresholding_static">Static</string>
    <string name="thresholding_static_summary">Require a more dynamic motion for your device to &lt;b>start&lt;/b> reporting movement. &lt;i>Current value: %s.&lt;/i></string>
    <string name="thresholding_dynamic">Dynamic</string>
    <string name="thresholding_dynamic_summary">Require a more dynamic motion for your device to &lt;b>continue&lt;/b> reporting movement. &lt;i>Current value: %s.&lt;/i></string>

    <!-- Rounding -->
    <string name="rounding_title">Rounding</string>
    <string name="rounding_enabled">Round values to reduce small jitter and reduce CPU load.</string>
    <string name="rounding_disabled">Output computed values as-is.</string>
    <string name="rounding_decimalplaces">Decimal places</string>

